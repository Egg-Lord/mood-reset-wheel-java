<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_calm_gradient">

    <!-- ACTIVITY TITLE -->
    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini Activity"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- PREVIEW / GAME AREA -->
    <FrameLayout
        android:id="@+id/previewArea"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_card"
        android:layout_marginBottom="16dp"
        android:padding="12dp"/>

    <!-- START BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        style="@style/AppButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Start"
        android:layout_marginBottom="24dp"/>

    <!-- BOTTOM ACTION BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/spinAgainButton"
            style="@style/AppButton.Secondary"
            android:layout_width="wrap_content"
            android:text="Spin Again"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitButton"
            style="@style/AppButton.Danger"
            android:layout_width="wrap_content"
            android:text="Exit App"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</LinearLayout>