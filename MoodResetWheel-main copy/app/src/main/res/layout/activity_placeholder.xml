<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeholderRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cozy_gradient"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome back ðŸŒ¿"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.08"/>

    <!-- Subtitle / Username -->
    <TextView
        android:id="@+id/tvHomeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cozy prompt card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="3dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/outline"
        app:cardBackgroundColor="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/tvHomeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPromptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todayâ€™s gentle prompt âœï¸"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tvPromptBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Name one small thing you can do for yourself in the next 10 minutes."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Actions card -->
    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvActionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a gentle activity:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Mood Wheel -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoWheel"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Mood Reset Wheel ðŸŽ¡"/>

        <!-- Tap the Calm -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoTapCalm"
            style="@style/AppButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text="Tap The Calm âœ¨"/>

        <!-- Feeling Log -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoFeelingLog"
            style="@style/AppButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text="Feeling Checkâ€‘In ðŸ““"/>

    </LinearLayout>

    <!-- Bottom tiny note -->
    <TextView
        android:id="@+id/tvBottomNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You donâ€™t need to do everything. One small step is enough."
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/actionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>