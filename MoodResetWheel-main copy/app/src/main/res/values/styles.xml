<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary filled button -->
    <style name="AppButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/brand_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Secondary outlined button -->
    <style name="AppButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Danger button -->
    <style name="AppButton.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>