<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary filled button -->
    <style name="AppButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/brand_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Secondary outlined button -->
    <style name="AppButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Danger button -->
    <style name="AppButton.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MoodButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MoodTile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/chip_bg</item>
    </style>

    <style name="MoodEmoji">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MoodLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


</resources>