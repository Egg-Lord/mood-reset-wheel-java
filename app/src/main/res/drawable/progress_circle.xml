<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape
            android:shape="ring"
            android:thickness="8dp"
            android:useLevel="false">
            <solid android:color="@color/outline" />
        </shape>
    </item>

    <!-- Progress circle -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thickness="8dp">
                <gradient
                    android:startColor="#2A9D8F"
                    android:centerColor="#9AD9D0"
                    android:endColor="#2A9D8F"
                    android:angle="0"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>