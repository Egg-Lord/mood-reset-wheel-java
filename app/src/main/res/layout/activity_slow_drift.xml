<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Slow Drift"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/brand_500"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <com.example.moodresetwheel.SlowDriftView
        android:id="@+id/slowDriftView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleText"
        android:layout_above="@id/bottomContainer"/>

    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync your breathing with the circle\n↑ Inhale  •  ↓ Exhale"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Done"
            android:visibility="gone"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/brand_500"
            android:textColor="@color/white"
            app:cornerRadius="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/spinAgainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spin Again"
                android:visibility="gone"
                android:backgroundTint="@color/accent_500"
                android:textColor="@color/white"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit App"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                android:backgroundTint="@color/danger"
                android:textColor="@color/white"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>