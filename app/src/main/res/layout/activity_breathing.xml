<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cozy_gradient"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvBreathingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/breathing_title"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvBreathingSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/breathing_subtitle"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBreathingTitle" />

    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBreathing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBreathingSubtitle"
        app:strokeColor="@color/outline"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <!-- Phase text -->
            <TextView
                android:id="@+id/tvPhase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/breathing_ready"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Timer text -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/breathing_tap_to_start"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPhase" />

            <!-- Breathing visual (ConstraintLayout so we can use percent sizing) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/breathVisualContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimer">

                <!-- Outer ring -->
                <View
                    android:id="@+id/breathRing"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_breath_ring"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Inner circle (70% of container using percent constraints) -->
                <View
                    android:id="@+id/breathCircle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_breath_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.70"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.70" />

                <!-- Center start/stop button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBreathStart"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bg_breath_button"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/start"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="55dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textTop"
                    app:iconPadding="4dp"
                    app:iconTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rippleColor="#22FFFFFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom pace controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSlow"
            style="@style/AppButton.Secondary"
            android:layout_width="wrap_content"
            android:text="@string/breathing_slow" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNormal"
            style="@style/AppButton.Secondary"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/breathing_normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFast"
            style="@style/AppButton.Secondary"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/breathing_fast" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>