<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".BreathSyncActivity">


    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Breathing Exercise"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Timer Display -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="30s"
        android:textColor="#4ECCA3"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Breathing Circle -->
    <View
        android:id="@+id/breathingCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background" />

    <!-- Breath State Text -->
    <TextView
        android:id="@+id/breathStateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/breathingCircle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Breathe In"
        android:textColor="#4ECCA3"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/instructionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Follow the circle's rhythm\nInhale as it expands, exhale as it contracts"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</RelativeLayout>