<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cozy_gradient"
    android:padding="20dp">

    <TextView
        android:id="@+id/feelingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How do you feel right now?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/feelingCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@drawable/bg_card"
        android:elevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/feelingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fun cozy header -->
        <TextView
            android:id="@+id/feelingEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ™‚"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/feelingHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick check-in â€” slide or tap a mood"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <SeekBar
            android:id="@+id/feelingSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3"
            android:progressTint="@color/brand_500"
            android:thumbTint="@color/brand_700" />

        <!-- Cozy mood chips (no logic required yet; theyâ€™re optional) -->
        <LinearLayout
            android:id="@+id/moodChipRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/chipNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ™‚ Neutral"
                android:textColor="@color/text_primary"
                android:background="@drawable/chip_bg"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipTense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜¬ Tense"
                android:textColor="@color/text_primary"
                android:background="@drawable/chip_bg"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipStressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜£ Stressed"
                android:textColor="@color/text_primary"
                android:background="@drawable/chip_bg"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/chipOverwhelmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥º Overwhelmed"
                android:textColor="@color/text_primary"
                android:background="@drawable/chip_bg"/>
        </LinearLayout>

        <!-- Labels still included (if you want them) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Neutral"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tense"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stressed"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Overwhelmed"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        style="@style/AppButton.Primary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Continue"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/feelingCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>