<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <!-- ðŸŒ» Sunflower -->
    <ImageView
        android:id="@+id/sunflowerIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/sunflower_icon"
        android:contentDescription="Sunflower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"/>

    <!-- ðŸ’¬ Speech bubble -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chatBubbleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/sunflowerIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sunflowerIcon"
        app:layout_constraintBottom_toBottomOf="@id/sunflowerIcon">

        <TextView
            android:id="@+id/feelingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="How are ya feeling?"
            android:textColor="#1F2937"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ§  Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/feelingCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/chatBubbleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Slider (4 steps) -->
            <SeekBar
                android:id="@+id/feelingSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="3"
                android:progress="0"
                android:layout_marginBottom="32dp"
                android:progressTint="#D1D5DB"
                android:thumbTint="#9CA3AF"/>

            <!-- Mood Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Neutral -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNeutral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#E5E7EB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜"
                            android:textSize="24sp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Neutral"
                            android:textStyle="bold"
                            android:textColor="#1F2937"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tense -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#E5E7EB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜¬"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Tense"
                            android:textStyle="bold"
                            android:textColor="#1F2937"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Stressed -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStressed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#E5E7EB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜Ÿ"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Stressed"
                            android:textStyle="bold"
                            android:textColor="#1F2937"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Overwhelmed -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOverwhelmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:clickable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#E5E7EB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜°"
                            android:textSize="24sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Overwhelmed"
                            android:textStyle="bold"
                            android:textColor="#1F2937"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Continue -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2DD4BF"
        app:cornerRadius="16dp"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/feelingCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
