<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cozy_gradient"
    android:padding="20dp">

    <TextView
        android:id="@+id/wheelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mood_reset_wheel"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_spin"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/wheelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wheelCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="24dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/outline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultCard"
        app:layout_constraintDimensionRatio="1:1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/wheelArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:elevation="20dp"
                android:shadowColor="#22000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="@string/wheel_arrow"
                android:textColor="@color/text_primary"
                android:textSize="34sp"
                android:translationY="-18dp" />

            <FrameLayout
                android:id="@+id/wheelContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.moodresetwheel.PizzaWheelView
                android:id="@+id/wheelView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </FrameLayout>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Cozy Result Card -->
    <LinearLayout
        android:id="@+id/resultCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/wheelCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todays_reset"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"/>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spin_for_suggestion"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>