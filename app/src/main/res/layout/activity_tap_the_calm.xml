<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/brand_500">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/muteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:background="@android:color/transparent"
            app:tint="@color/white"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the Calm"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap each circle as it appears"
        android:textSize="14sp"
        android:textColor="@color/brand_200"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tapCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"/>

    <FrameLayout
        android:id="@+id/gameArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/glowView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/calm_glow"
            android:alpha="0.6"
            android:visibility="gone"
            android:backgroundTint="@color/accent_500"/>

        <View
            android:id="@+id/calmCircle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/calm_circle"
            android:visibility="gone"
            android:backgroundTint="@color/white"/>
    </FrameLayout>

    <TextView
        android:id="@+id/countdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/brand_700"
        android:textColor="@color/white"
        app:cornerRadius="12dp"/>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/spinAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Spin Again"
            android:backgroundTint="@color/accent_500"
            android:textColor="@color/white"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Exit App"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/danger"
            android:textColor="@color/white"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</LinearLayout>